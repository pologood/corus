<assembly>
  <id>v2.0</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    
    <!-- lib -->
    <fileSet>
       <outputDirectory>lib</outputDirectory>
       <directory>${basedir}/lib</directory>
       <includes>
          <include>**/*</include>
       </includes>
    </fileSet>
    
    <fileSet>
       <outputDirectory>lib</outputDirectory>    
       <directory>${basedir}/target</directory>
       <includes>
          <include>corus_sample_workshop*.jar</include>
       </includes>
    </fileSet>  
  
    <fileSet>
       <outputDirectory>/META-INF</outputDirectory>
       <directory>target/v2/dist/template</directory>
       <includes>
          <include>corus.xml</include>
       </includes>
    </fileSet>
    
    <fileSet>
       <outputDirectory>/</outputDirectory>
       <directory>target/v2/dist/template</directory>
       <includes>
          <include>exec.xml</include>
       </includes>
    </fileSet>

    <fileSet>
       <outputDirectory>/META-INF/scripts</outputDirectory>
       <directory>dist/scripts</directory>
       <includes>
          <include>**</include>
       </includes>
    </fileSet>

  </fileSets>
  
</assembly>